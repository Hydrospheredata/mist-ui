{
    "compileOnSave": false,
    "compilerOptions": {
        "outDir": "mist-ui",
        "baseUrl": "src",
        "sourceMap": true,
        "declaration": false,
        "moduleResolution": "node",
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "target": "es5",
        "paths": {
            "@environments/*": [
                "environments/*"
            ],
            "@app/*": [
                "app/*"
            ],
            "@modules/*": [
                "app/modules/*"
            ],
            "@core/*": [
                "app/modules/core/*"
            ],
            "@shared/*": [
                "app/modules/shared/*"
            ],
            "@workers/*": [
                "app/modules/workers/*"
            ],
            "@jobs/*": [
                "app/modules/jobs/*"
            ],
            "@functions/*": [
                "app/modules/functions/*"
            ],
            "@components/*": [
                "app/components/*"
            ],
            "@mocks/*": [
                "app/mocks/*"
            ],
            "@node_modules/*": [
                "../node_modules/*"
            ]
        },
        "typeRoots": [
            "node_modules/@types"
        ],
        "lib": [
            "es2016",
            "dom"
        ]
    }
}