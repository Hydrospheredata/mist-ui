{
  "compileOnSave": false,
  "compilerOptions": {
    "outDir": "./dist/out-tsc",
    "baseUrl": "src",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "target": "es5",
    "paths": {
      "@app/*": ["app/*"],
      "@components/*": ["app/components/*"],
      "@services/*": ["app/services/*"],
      "@pipes/*": ["app/pipes/*"],
      "@models/*": ["app/models/*"],
      "@mocks/*": ["app/mocks/*"],
      "@node_modules/*": ["../node_modules/*"]
    },
    "typeRoots": [
      "node_modules/@types"
    ],
    "lib": [
      "es2016",
      "dom"
    ]
  }
}
